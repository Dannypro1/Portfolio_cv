generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  skills    skills[] //@relation("userskills")
  projects  projects[] //@relation("userprojects")
  education education[] //@relation("usereducation")
  experience experience[] //@relation("userexperience")
}

model skills{
  id String   @id @default(cuid())
  Title String
  Description String
  userId String
  createdAt DateTime @default(now())
  users        User     @relation(fields: [userId], references: [id])
}

model projects{
  id String   @id @default(cuid())
  Title String
  Description String
  Link String
  image Bytes
  userId String
  createdAt DateTime @default(now())
  users        User     @relation(fields: [userId], references: [id])
}

model education{
  id String   @id @default(cuid())
  Title String
  Description String
  Link String
  userId String
  createdAt DateTime @default(now())
  users        User     @relation(fields: [userId], references: [id])
}
model experience{
  id String   @id @default(cuid())
  Title String
  Description String
  Link String
  userId String
  createdAt DateTime @default(now())
  users        User     @relation(fields: [userId], references: [id])
}
